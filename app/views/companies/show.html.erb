<h1><%= @company.name %></h1>
<h2>Company Information</h2>
  <h3>Financial Info</h3>
    <p>Total Rent: <%= number_to_currency @company.total_rent %></p>

  <h3>Office Locations</h3>
    <table class="table table-striped">
        <thead>
          <tr>
            <th>Building</th>
            <th>Floor</th>
          </tr>
        </thead>
        <tbody>
          <% @company.offices.each do |office| %>
            <tr>
              <td><%= office.building.name %></td>
              <td><%= office.floor %></td>
            </tr>
          <% end %>
        </tbody>
    </table>

  <h3>Employees</h3>
    <%= button_to 'Add Employee', new_company_employee_path(@company.id), method: :get, class: 'btn btn-primary' %>
    <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Title</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @company.employees.each do |employee| %>
            <tr>
              <td><%= employee.name %></td>
              <td><%= employee.title %></td>
              <td><%= button_to 'Delete', company_employee_path(company_id: @company.id, id: employee.id), method: :delete, class: 'btn btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
