<h1>All Companies</h1>
<%= button_to 'Add Company', new_company_path, method: :get, class: 'btn btn-primary btn-large' %>
<% if @companies.any? %>
<table class="table table-striped">
    <thead>
      <tr>
        <th>Company Name</th>
        <th>Buildings</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td><%= link_to company.name, company_path(company.id) %></td>
          <td><%= company.building_names.join(', ') %></td>
          <td><%= button_to 'Delete', company_path(company.id), method: :delete, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
<% end %>
